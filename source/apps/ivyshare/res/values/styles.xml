    <style name="Theme.NoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FFFF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="chat_bottom_button_padding">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="user_setting_textview">
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/listbar_main_textsize</item>
        <item name="android:textColor">@color/listbar_main</item>
    </style>
    <style name="user_setting_editview">
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/listbar_secondray_textsize</item>
        <item name="android:textColor">@color/listbar_secondray</item>
    </style>

    <style name="system_setting_layout_padding">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="tab_title_bar_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="quick_person_info_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/listbar_secondray_textsize</item>
        <item name="android:textColor">@color/listbar_secondray</item>
    </style>

    <style name="quick_person_relativelayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/quick_person_info_textview_height</item>
    </style>

    <style name="about_relativelayout">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_setting_layout_heigth</item>
        <item name="android:background">@drawable/listbar_all_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="chat_content_textview">
        <item name="android:autoLink">none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/listbar_main_textsize</item>
        <item name="android:textColor">@color/listbar_main</item>
    </style>

    <style name="network_setting_left_textview">
        <item name="android:layout_width">@dimen/user_setting_textview_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/listbar_main_textsize</item>
        <item name="android:textColor">@color/listbar_main</item>
    </style>

    <style name="network_setting_right_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/listbar_secondray_textsize</item>
        <item name="android:textColor">@color/listbar_secondray</item>
    </style>

    <style name="popwin_anim_style">  
       <item name="android:windowEnterAnimation">@anim/zoomin</item>  
    </style> 
</resources>