<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dp"
	android:layout_height="300dp"
	android:background="@drawable/background_holo_light"
	android:orientation = "vertical" 
	android:padding="10dp">
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        >
	
       	<ImageView
		    android:id="@+id/photoimage"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:padding="1dp"
			android:background="@drawable/menu_box_white_gray_normal"   
		    android:src="@drawable/ic_contact_picture" />
        
       	<TextView
			    android:id="@+id/nickname"
			    android:layout_marginLeft="20dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/listbar_main"
			    android:textSize="@dimen/listbar_main_textsize"/>
    </LinearLayout>
    
	<RelativeLayout
        android:background="@drawable/listbar_top_selector"
		android:layout_marginTop="18dp"
		style="@style/quick_person_relativelayout" >
		<TextView
		    android:id="@+id/groupnamelabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:layout_alignParentLeft="true"
		    android:text="@string/group_name"
		    android:textColor="@color/listbar_main"
		    android:textSize="@dimen/listbar_main_textsize" />
		<TextView
		    android:id="@+id/groupname"
		    android:layout_toRightOf="@id/groupnamelabel"
		    style="@style/quick_person_info_textview"/>
	</RelativeLayout>
	
    <FrameLayout
        android:background="@drawable/listbar_divider"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:background="@drawable/listbar_middle_selector"
		style="@style/quick_person_relativelayout" >
		<TextView
		    android:id="@+id/addresslabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:layout_alignParentLeft="true"
		    android:text="@string/ip_address"
		    android:textColor="@color/listbar_main"
		    android:textSize="@dimen/listbar_main_textsize" />
		<TextView
		    android:id="@+id/address"
		    android:layout_toRightOf="@id/addresslabel"
		    style="@style/quick_person_info_textview"/>
	</RelativeLayout>
	
    <FrameLayout
        android:background="@drawable/listbar_divider"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" />

   	<RelativeLayout
        android:background="@drawable/listbar_bottom_selector"
		style="@style/quick_person_relativelayout" >
		<TextView
		    android:id="@+id/signlabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:layout_alignParentLeft="true"
		    android:text="@string/signature"
		    android:textColor="@color/listbar_main"
		    android:textSize="@dimen/listbar_main_textsize" />
		<TextView
		    android:id="@+id/signname"
		    android:layout_toRightOf="@id/signlabel"
		    style="@style/quick_person_info_textview"/>

	</RelativeLayout>
</LinearLayout>
