<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeshare_layout_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/freeshare_layout_right_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/freeshare_right_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_contact_picture" />
        <ImageView
            android:id="@+id/photo_triangle_affordance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/account_spinner_icon" />
        <ImageView
	        android:id="@+id/photo_msg_bubble"
	        android:src="@drawable/msg_bubble_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center"/>

    </FrameLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_toLeftOf="@id/freeshare_layout_right_photo" >

    	<LinearLayout
	        android:id="@+id/freeshare_layout_right_pic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="right"
	        android:background="@drawable/light_white_background" >
	        <ImageView
	            android:id="@+id/freeshare_right_pic"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        <TextView
	            android:id="@+id/freeshare_right_pic_prompt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/list_main"
	            android:textSize="@dimen/list_main_textsize" />
        </LinearLayout>

    	<TextView
	        android:id="@+id/freeshare_right_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginRight="10dp"
	        android:textColor="@color/list_secondray"
	        android:textSize="@dimen/list_secondray_textsize" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listbar_divider" />

</RelativeLayout>